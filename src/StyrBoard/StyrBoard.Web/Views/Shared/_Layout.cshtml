<body>
    <div layout="column" layout-fill>
        <section ng-controller="menuCtrl" layout="row" flex>
            <md-sidenav class="md-sidenav-left md-whiteframe-z2" md-component-id="left" md-is-locked-open="true" ng-cloak>
                <md-toolbar>
                    <h1 class="md-toolbar-tools">Menu</h1>
                </md-toolbar>
                <md-content class="md-padding">
                    <div ng-repeat="menuItem in menuItems" layout="row">
                        <md-button flex ng-href="{{menuItem.link}}">{{menuItem.title}}</md-button>
                    </div>
                    <p>
                        This sidenav is locked open on your device. To go back to the default behavior,
                        narrow your display.
                    </p>
                </md-content>
            </md-sidenav>
            <md-content class="md-padding" flex>
                @RenderBody()
            </md-content>
        </section>
    </div>



    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery.signalR-2.1.2.js"></script>
    <script src="/bower_components/angular/angular.js"></script>
    <script src="/bower_components/angular-aria/angular-aria.js"></script>
    <script src="/bower_components/angular-animate/angular-animate.js"></script>
    <script src="/bower_components/hammerjs/hammer.js"></script>
    <script src="/bower_components/angular-material/angular-material.js"></script>
    <script src="~/bower_components/ng-sortable/dist/ng-sortable.js"></script>

    <script src="~/App/main.js"></script>
    <script src="~/App/Service/boardService.js"></script>
    <script src="~/App/Service/taskService.js"></script>
    <script src="~/App/Ctrl/boardCtrl.js"></script>
    <script src="~/App/Ctrl/menuCtrl.js"></script>
</body>
</html>
