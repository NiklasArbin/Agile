    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=RobotoDraft:400,500,700,400italic">
    <link href="~/Content/board.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/bower_components/ng-sortable/dist/ng-sortable.css" rel="stylesheet" />

    <script type="text/javascript">
